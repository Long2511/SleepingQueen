<?xml version="1.0" encoding="UTF-8"?>
<!--
    This is the FXML file for the queen card that is placed on the board.
    It is a simple VBox with an ImageView with an image of a queen card.
    The image is set to be clickable, and when clicked, it will call the clickCard method in the CardController class.
    The image is set to be clickable by setting the pickOnBounds attribute to true.
    @author: Thanh Phuc Le
-->

<?import javafx.geometry.Insets?>
<?import javafx.scene.layout.*?>
<GridPane xmlns:fx="http://javafx.com/fxml/1" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity"
          minWidth="-Infinity"
          prefHeight="248.0" prefWidth="169.0" xmlns="http://javafx.com/javafx/23.0.1"
          fx:controller="com.ouroboros.sleepingqueen.subPlayer.SubPlayerQueenFieldController">
    <columnConstraints>
        <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="84.5"/>
        <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="84.5"/>
    </columnConstraints>
    <rowConstraints>
        <RowConstraints minHeight="10.0" prefHeight="124.0" vgrow="SOMETIMES"/>
        <RowConstraints minHeight="10.0" prefHeight="124.0" vgrow="SOMETIMES"/>
    </rowConstraints>
    <children>
        <VBox fx:id="subQueen1Box" prefHeight="120.0" prefWidth="74.0"
              GridPane.columnIndex="0" GridPane.rowIndex="0">
            <GridPane.margin>
                <Insets/>
            </GridPane.margin>
        </VBox>
        <VBox fx:id="subQueen2Box" prefHeight="120.0" prefWidth="74.0"
              GridPane.columnIndex="1" GridPane.rowIndex="0">
            <GridPane.margin>
                <Insets left="10.5"/>
            </GridPane.margin>
        </VBox>
        <VBox fx:id="subQueen3Box" prefHeight="120.0" prefWidth="74.0"
              GridPane.columnIndex="0" GridPane.rowIndex="1">
            <GridPane.margin>
                <Insets top="4.0"/>
            </GridPane.margin>
        </VBox>
        <VBox fx:id="subQueen4Box" prefHeight="120.0" prefWidth="74.0"
              GridPane.columnIndex="1" GridPane.rowIndex="1">
            <GridPane.margin>
                <Insets left="10.5" top="4.0"/>
            </GridPane.margin>
        </VBox>
    </children>
</GridPane>
