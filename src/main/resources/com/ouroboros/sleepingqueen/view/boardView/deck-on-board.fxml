<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.VBox?>
<VBox xmlns:fx="http://javafx.com/fxml/1" alignment="TOP_CENTER" maxHeight="559.0" maxWidth="323.0" minHeight="559.0"
      minWidth="323.0" prefHeight="559.0" prefWidth="323.0" spacing="75"
      xmlns="http://javafx.com/javafx/17.0.12" fx:controller="com.ouroboros.sleepingqueen.card.DeckController">
    <children>
        <ImageView fx:id="discarded" fitHeight="171.0" fitWidth="123.0" pickOnBounds="true">
            <image>
                <Image url="@../../cardImg/king-1.jpg"/>
            </image>
        </ImageView>
        <Button fx:id="playButton" mnemonicParsing="false" text="Play card"/>
        <ImageView fx:id="deck" fitHeight="171.0" fitWidth="123.0" onMouseClicked="#drawCard" pickOnBounds="true">
            <image>
                <Image url="@../../cardImg/king-1.jpg"/>
            </image>
        </ImageView>
    </children>
    <padding>
        <Insets bottom="20.0" left="21.0" right="20.0" top="17.0"/>
    </padding>
</VBox>
